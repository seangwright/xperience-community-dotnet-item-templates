{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "dotnet: pack",
      "command": "dotnet",
      "type": "shell",
      "args": [
        "pack",
        "src/templatepack.csproj",
        "-o",
        "./",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "group": "build",
      "presentation": {
        "reveal": "silent"
      },
      "dependsOn": ["dotnet: build"],
      "problemMatcher": "$msCompile"
    },
    {
      "type": "dotnet",
      "task": "build",
      "problemMatcher": ["$msCompile"],
      "group": "build",
      "label": "dotnet: build",
      "dependsOn": ["dotnet: restore"]
    },
    {
      "label": "dotnet: restore",
      "command": "dotnet",
      "type": "shell",
      "args": ["restore", "src/src.sln"],
      "group": "build",
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "dotnet: uninstall template",
      "command": "dotnet new uninstall XperienceCommunity.DotnetItemTemplates || echo 0",
      "type": "shell",
      "group": "build",
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "dotnet: install template",
      "command": "dotnet",
      "type": "shell",
      "args": [
        "new",
        "install",
        ".\\XperienceCommunity.DotnetItemTemplates.${input:templateVersionNumber}.nupkg"
      ],
      "group": "build",
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "templates: reset cache",
      "command": "scripts/Reset-Templates.ps1",
      "type": "shell",
      "args": [],
      "group": "build",
      "presentation": {
        "reveal": "silent"
      },
      "dependsOn": [],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "templates: reinstall",
      "command": "dotnet",
      "type": "shell",
      "args": [
        "new",
        "install",
        ".\\XperienceCommunity.DotnetItemTemplates.${input:templateVersionNumber}.nupkg"
      ],
      "group": "build",
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": "$msCompile",
      "dependsOn": [
        "dotnet: uninstall template",
        "templates: reset cache",
        "dotnet: pack"
      ],
      "dependsOrder": "sequence"
    },
    {
      "type": "npm",
      "script": "install",
      "path": "src/templates",
      "group": "clean",
      "problemMatcher": [],
      "label": "npm: install",
      "detail": "install dependencies from package"
    }
  ],
  "inputs": [
    {
      "id": "templateVersionNumber",
      "description": "Template Version Number",
      "default": "1.0.0",
      "type": "promptString"
    }
  ]
}
